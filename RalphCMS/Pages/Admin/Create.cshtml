@model RalphCMS.Pages.Admin.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Page</h4>
<hr />
@if (Model.PageTitles.Count > 0)
{
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @*<div class="form-group">
                            <label asp-for="Page.Title" class="control-label"></label>
                            <input asp-for="Page.Title" class="form-control" />
                            <span asp-validation-for="Page.Title" class="text-danger"></span>
                        </div>*@

                    <div class="form-group">
                        <label asp-for="Page.Title" class="control-label"></label>
                        <select asp-for="Page.Title" class="form-control" asp-items="new SelectList(Model.PageTitles)">
                            <option value="" selected disabled>Choose a page</option>
                        </select>
                        <span asp-validation-for="Page.Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Page.Content" class="control-label"></label>
                    <input asp-for="Page.Content" class="form-control" />
                    <span asp-validation-for="Page.Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
else
{
    <h3>All pages used..</h3>
}


<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
